generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  passwordHash  String
  role          String    @default("MEMBER")
  phone         String?
  avatarUrl     String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Legacy fields (kept for now; use entitlements below)
  membershipType     String?   @default("DROP_IN")
  membershipExpiresAt DateTime?

  bookings      Booking[]
  waitlistEntries WaitlistEntry[]
  attendances   Attendance[]

  subscriptions MemberSubscription[]
  purchases     Purchase[]
  creditLedger  CreditLedgerEntry[]
}

enum PlanType {
  UNLIMITED
  CLASS_PACK
  DROP_IN
}

enum PurchaseStatus {
  OPEN
  PAID
  VOID
  REFUNDED
}

enum PaymentMethod {
  CASH
  COUNTER_CARD
  COMP
  ADJUSTMENT
}

enum PaymentStatus {
  RECEIVED
  VOID
}

enum CreditReason {
  PURCHASE
  BOOKING_CONSUME
  CANCEL_REFUND
  LATE_CANCEL_CONSUME
  MANUAL_ADJUST
}

model Plan {
  id            String   @id @default(cuid())
  name          String
  type          PlanType

  priceCents    Int      @default(0)
  currency      String   @default("USD")

  // UNLIMITED
  durationDays  Int?

  // CLASS_PACK / DROP_IN
  credits       Int?
  creditExpiryDays Int?

  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  purchases     Purchase[]
  subscriptions MemberSubscription[]
}

model MemberSubscription {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  planId      String
  plan        Plan     @relation(fields: [planId], references: [id])

  startAt     DateTime
  endAt       DateTime
  status      String   @default("ACTIVE")

  purchaseId  String?
  purchase    Purchase? @relation(fields: [purchaseId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId, endAt])
  @@index([planId])
}

model Purchase {
  id          String         @id @default(cuid())
  userId      String
  user        User           @relation(fields: [userId], references: [id])
  planId      String?
  plan        Plan?          @relation(fields: [planId], references: [id])

  status      PurchaseStatus @default(OPEN)
  subtotalCents Int          @default(0)
  totalCents   Int          @default(0)
  currency     String       @default("USD")

  note        String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  payments    Payment[]
  subscriptions MemberSubscription[]
  creditEntries CreditLedgerEntry[]

  @@index([userId, createdAt])
}

model Payment {
  id          String        @id @default(cuid())
  purchaseId  String
  purchase    Purchase      @relation(fields: [purchaseId], references: [id])

  method      PaymentMethod
  status      PaymentStatus @default(RECEIVED)
  amountCents Int
  receivedAt  DateTime      @default(now())
  note        String?

  createdAt   DateTime @default(now())

  @@index([purchaseId])
}

model CreditLedgerEntry {
  id          String       @id @default(cuid())
  userId      String
  user        User         @relation(fields: [userId], references: [id])

  delta       Int
  reason      CreditReason
  expiresAt   DateTime?

  purchaseId  String?
  purchase    Purchase?    @relation(fields: [purchaseId], references: [id])

  bookingId   String?
  booking     Booking?     @relation(fields: [bookingId], references: [id])

  note        String?
  createdAt   DateTime @default(now())

  @@index([userId, createdAt])
  @@index([expiresAt])
  @@index([purchaseId])
  @@index([bookingId])
}

model Instructor {
  id          String   @id @default(cuid())
  name        String
  bio         String?
  avatarUrl   String?
  specialties String   @default("[]")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  classes     Class[]
  availability InstructorAvailabilityRule[]
  timeOff      InstructorTimeOff[]
}

model InstructorAvailabilityRule {
  id            String   @id @default(cuid())
  instructorId  String
  instructor    Instructor @relation(fields: [instructorId], references: [id])

  dayOfWeek     Int
  startTime     String   // HH:mm
  endTime       String   // HH:mm
  effectiveFrom DateTime?
  effectiveTo   DateTime?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([instructorId])
}

model InstructorTimeOff {
  id            String   @id @default(cuid())
  instructorId  String
  instructor    Instructor @relation(fields: [instructorId], references: [id])

  startAt       DateTime
  endAt         DateTime
  reason        String?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([instructorId, startAt, endAt])
}

model ClassType {
  id              String   @id @default(cuid())
  name            String
  description     String?
  category        String
  intensity       Int      @default(3)
  durationMinutes Int      @default(60)
  color           String   @default("#6366f1")
  icon            String?
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  classes         Class[]
}

model Class {
  id            String   @id @default(cuid())
  classTypeId   String
  classType     ClassType @relation(fields: [classTypeId], references: [id])
  instructorId  String
  instructor    Instructor @relation(fields: [instructorId], references: [id])

  startTime     DateTime
  endTime       DateTime
  capacity      Int      @default(20)
  room          String?

  isRecurring   Boolean  @default(false)
  recurrenceRule String?

  isCancelled   Boolean  @default(false)
  cancelReason  String?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  bookings      Booking[]
  waitlistEntries WaitlistEntry[]
  attendances   Attendance[]
}

model Booking {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  classId     String
  class       Class    @relation(fields: [classId], references: [id])

  status      String   @default("CONFIRMED")
  bookedAt    DateTime @default(now())
  cancelledAt DateTime?

  reminderSent Boolean  @default(false)

  creditEntries CreditLedgerEntry[]

  @@unique([userId, classId])
}

model WaitlistEntry {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  classId     String
  class       Class    @relation(fields: [classId], references: [id])

  position    Int
  notifiedAt  DateTime?
  promotedAt  DateTime?

  createdAt   DateTime @default(now())

  @@unique([userId, classId])
}

model Attendance {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  classId     String
  class       Class    @relation(fields: [classId], references: [id])

  attendedAt  DateTime @default(now())
  checkInMethod String? @default("manual")

  @@unique([userId, classId])
}

model StudioSettings {
  id                    String   @id @default(cuid())
  name                  String   @default("Vibe Studio")
  bookingWindowDays     Int      @default(14)
  cancellationWindowHours Int    @default(12)
  lateCancelFee         Int      @default(0)
  minBookingBalance     Int      @default(1)
  defaultCapacity       Int      @default(20)
  timezone              String   @default("America/New_York")

  updatedAt             DateTime @updatedAt
}

enum AuditAction {
  CLASS_CREATE
  CLASS_UPDATE
  CLASS_DELETE
  CLASS_CAPACITY_OVERRIDE

  INSTRUCTOR_CREATE
  INSTRUCTOR_UPDATE
  INSTRUCTOR_DELETE
  INSTRUCTOR_AVAILABILITY_ADD
  INSTRUCTOR_AVAILABILITY_DELETE
  INSTRUCTOR_TIME_OFF_ADD
  INSTRUCTOR_TIME_OFF_DELETE

  BOOKING_CREATE
  BOOKING_CANCEL
  WAITLIST_JOIN
  WAITLIST_PROMOTE

  PLAN_CREATE
  PLAN_UPDATE
  PURCHASE_CREATE
  PAYMENT_RECORD
  SUBSCRIPTION_CREATE
  CREDIT_ADJUST
}

model AuditLog {
  id          String      @id @default(cuid())
  action      AuditAction
  entityType  String
  entityId    String?

  actorUserId String?
  actorEmail  String?
  actorRole   String?

  metadata    Json?

  createdAt   DateTime    @default(now())

  @@index([entityType, entityId])
  @@index([actorUserId])
  @@index([createdAt])
}
